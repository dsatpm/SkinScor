<div class='flex justify-end items-center'>
	<div class='bg-white rounded-lg h-screen p-4 w-1/5 max-w-screen-xl'>
		<div class='flex items-center space-x-4'>
			<img
				src='{{userImage}}'
				alt='User Image'
				class='w-16 h-16 rounded-full'
			/>
			<img
				src='{{userLogo}}'
				alt='User Logo'
				class='w-16 h-16 rounded-full'
			/>
		</div>

		<p class='mt-4'>{{userDescription}}</p>

		<div class='flex items-center mt-4 space-x-4'>
			<button class='flex items-center space-x-2'>
				<svg
					class='w-5 h-5'
					fill='none'
					stroke='currentColor'
					viewBox='0 0 24 24'
					xmlns='http://www.w3.org/2000/svg'
				>
				</svg>
				<span>Like ({{likeCount}})</span>
			</button>
			<button class='flex items-center space-x-2'>
				<svg
					class='w-5 h-5'
					fill='none'
					stroke='currentColor'
					viewBox='0 0 24 24'
					xmlns='http://www.w3.org/2000/svg'
				>
				</svg>
				<span>Dislike ({{dislikeCount}})</span>
			</button>
			<button class='flex items-center space-x-2'>
				<svg
					class='w-5 h-5'
					fill='none'
					stroke='currentColor'
					viewBox='0 0 24 24'
					xmlns='http://www.w3.org/2000/svg'
				>
				</svg>
				<span>Message ({{messageCount}})</span>
			</button>
		</div>
		<div class='scoreboard'>
			<h1>Scoreboard</h1>
			{{#each users}}
				<div class='user' data-user-id='{{id}}'>
					<span class='username'>{{username}}</span>
					<span class='points'>Points:
						<span class='user-points'>{{points}}</span></span>
				</div>
			{{/each}}
		</div>
	</div>
</div>
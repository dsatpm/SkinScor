<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ pageTitle }}</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Google+Finger+Paint&display=swap">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
    <link href='/public/css/jass.css' />
    <link href='/public/css/style.css' />
    <style>
        body {
            background-image: url('/public/images/Textured\ Background.jpg');
            background-size: cover;
        }
    </style>
</head>
<body>
    <header class="bg-black text-white p-4 flex justify-between items-center w-screen fixed top-0 left-0 right-0 z-10">
        <div class="flex space-x-4">
            <button class="text-lg">Account</button>
            <button class="text-lg">Leaderboard</button>
            <button class="text-lg">Home</button>
            <button class="text-lg">Notifications</button>
        </div>
        <div class="flex items-center space-x-4">
            <form>
                <input type="text" class="bg-gray-700 text-white px-3 py-2 rounded-md" placeholder="Search">
                <button type="submit" class="bg-blue-500 text-white px-3 py-2 rounded-md">Search</button>
            </form>
        </div>
    </header>

    <main class="p-4 mt-16">
        <div class="bg-white rounded-lg p-4 mx-auto max-w-screen-xl">
            <div class="flex items-center space-x-4">
                <img src="{{ userImage }}" alt="User Image" class="w-16 h-16 rounded-full">
                <img src="{{ userLogo }}" alt="User Logo" class="w-16 h-16 rounded-full">
            </div>
    
            <p class="mt-4">{{ userDescription }}</p>
    
            <div class="flex items-center mt-4 space-x-4">
                <button class="flex items-center space-x-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    </svg>
                    <span>Like ({{ likeCount }})</span>
                </button>
                <button class="flex items-center space-x-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    </svg>
                    <span>Dislike ({{ dislikeCount }})</span>
                </button>
                <button class="flex items-center space-x-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    </svg>
                    <span>Message ({{ messageCount }})</span>
                </button>
            </div>
        </div>
    </main>
    <footer class="bg-black text-white p-4 text-center fixed bottom-0 left-0 right-0">
        <div class="max-w-screen-xl mx-auto">
        &copy; {{ currentYear }} SKINSC&#214;R
        </div>
    </footer>
</body>
</html>

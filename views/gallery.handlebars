<div class='flex justify-center items-center h-screen w-screen bg-black'>
  <div class='container mx-auto p-4 bg-white shadow-lg rounded-lg ' style="height: 80vh; display: flex; flex-direction: column;">
    <div class='text-center'>
      <h1 class='text-2xl font-bold'>Profile</h1>

      <div class='flex items-center justify-center'>
        <img
          src='../public/images/skinscoretestpfp.png'
          alt='User Profile Picture'
          class='w-24 h-24 rounded-full mb-4'
        />
      </div>

      <div>
        <h2 class='text-xl font-bold'>Name: {{ User.username }}</h2>
        <p class='font-semibold'>SkinScore: {{ User.skinscore }}</p>

      </div>
    </div>

    <div class='text-center flex-grow'>
      <h2 class='text-lg font-bold'>User Posts</h2>
      <div class='my-4'>
        {{#each userPosts}}
          <div class='bg-gray-200 rounded p-4 mb-4'>
            <h3 class='text-xl font-semibold'>{{title}}</h3>
            <p>{{content}}</p>
            <img src='{{image}}' alt='{{title}}' class='mt-4 rounded' />
            <div class='text-right mt-2'>
              <button class='bg-black text-white px-4 py-2 rounded mr-2'>
                Like
              </button>
              <button class='bg-red-500 text-white px-4 py-2 rounded'>
                Dislike
              </button>
            </div>
          </div>
        {{/each}}
      </div>
    </div>

    <div class="flex justify-center">
      <a href="/createpost">
        <button
          id="showCreatePost"
          class="bg-black text-white px-4 py-2 rounded hover:bg-blue-700"
        >
          Create New Post
        </button>
      </a>
    </div>
  </div>
</div>
<script src='../public/js/gallery.js'></script>
<div class='container mx-auto p-4 bg-white shadow-lg rounded-lg'>
	<div class='text-center'>
		<h1 class='text-2xl font-bold'>Create New Tattoo Post</h1>
	</div>

	<div class='bg-gray-200 rounded p-4 my-4'>
		<div id='createPostContainer'></div>
		<form
			id='myForm'
			action='/tattoos'
			method='post'
			enctype='multipart/form-data'
		>
			<input
				type='text'
				name='title'
				placeholder='Tattoo Title'
				class='w-full py-2 px-4 rounded border border-gray-300 mb-4'
			/>
			<textarea
				name='description'
				placeholder='Tattoo Description'
				rows='4'
				class='w-full py-2 px-4 rounded border border-gray-300 mb-4'
			></textarea>
			<input
				type='file'
				name='imageUrl'
				accept='image/*'
				class='w-full py-2 px-4 rounded border border-gray-300 mb-4'
			/>
			<input
				type='text'
				name='artist'
				placeholder='Tattoo Artist'
				class='w-full py-2 px-4 rounded border border-gray-300 mb-4'
			/>
			<input
				type='text'
				name='userId'
				placeholder='User ID'
				class='w-full py-2 px-4 rounded border border-gray-300 mb-4'
			/>
			<button
				type='submit'
				class='bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700'
			>Submit Tattoo </button>
		</form>
	</div>
</div>
<script src='../public/js/createpost.js'></script>